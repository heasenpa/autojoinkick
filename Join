-- Gi·ªõi h·∫°n FPS
task.spawn(function()
    local targetFPS = 10
    while task.wait(2) do
        if setfpscap then
            setfpscap(targetFPS)
        elseif setfpscap2 then
            setfpscap2(targetFPS)
        end
    end
end)
-- x√≥a map
for i,v in next, workspace:GetDescendants() do
    pcall(function()
        v.Transparency = 1
    end)
end
for i,v in next, getnilinstances() do
    pcall(function()
        v.Transparency = 1
        for i1,v1 in next, v:GetDescendants() do
            v1.Transparency = 1
        end
    end)
end
a = workspace
a.DescendantAdded:Connect(function(v)
    pcall(function()
        v.Transparency = 1
    end)
end)
-- ‚úÖ Anti AFK si√™u nh·∫π + GUI c·ª±c g·ªçn
task.spawn(function()
    local Players = game:GetService("Players")
    local VirtualUser = game:GetService("VirtualUser")
    local player = Players.LocalPlayer

    -- üñ•Ô∏è GUI nh·ªè g√≥c ph·∫£i d∆∞·ªõi
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "AFKGui"
    screenGui.ResetOnSpawn = false
    screenGui.IgnoreGuiInset = true
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Global
    screenGui.DisplayOrder = 9999
    screenGui.Parent = player:WaitForChild("PlayerGui")

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0, 60, 0, 18)
    label.Position = UDim2.new(1, -70, 1, -25) -- g√≥c ph·∫£i d∆∞·ªõi
    label.BackgroundTransparency = 1 -- ‚ùå Kh√¥ng c√≥ n·ªÅn
    label.TextColor3 = Color3.fromRGB(0, 255, 0)
    label.Text = "AFK"
    label.Font = Enum.Font.Gotham
    label.TextSize = 10 -- nh·ªè g·ªçn
    label.Parent = screenGui

    -- üîÅ Ch·ªëng AFK
    player.Idled:Connect(function()
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end)
end)
